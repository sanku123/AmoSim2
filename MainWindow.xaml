<Window x:Class="AmoSim2.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:cc="clr-namespace:AmoSim2.Others" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:AmoSim2" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:prism="http://prismlibrary.com/" xmlns:uc="clr-namespace:AmoSim2.UserControls" xmlns:vm="clr-namespace:AmoSim2.Player" x:Name="MyWindow" Title="MainWindow" Width="1900" Height="1200" Background="#FF000032" Closing="MyWindow_Closing" Loaded="MyWindow_Loaded" WindowStartupLocation="Manual" WindowState="Maximized" mc:Ignorable="d">

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="160" />
      <ColumnDefinition Width="300" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="300" />
      <ColumnDefinition Width="160" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal">
      <Button Content="PVM" Style="{StaticResource MediumButton}" />
      <Button Content="PVP" Style="{StaticResource MediumButton}" />
      <StackPanel.Background>
        <SolidColorBrush Opacity="0.05" Color="White" />
      </StackPanel.Background>
    </StackPanel>

    <StackPanel Grid.Row="1">
      <uc:RacesList />
      <uc:ClassList DataContext="{Binding HubViewModel, Source={StaticResource ViewModelLocator}}" />
      <uc:BlessList DataContext="{Binding HubViewModel, Source={StaticResource ViewModelLocator}}" />
      <uc:RobeList />
    </StackPanel>

    <StackPanel Grid.Row="1" Grid.Column="4" DataContext="{Binding EnemyView.Enemy, Source={StaticResource ViewModelLocator}}">
      <uc:RacesList />
      <uc:ClassList />
      <uc:BlessList />
      <uc:RobeList />
    </StackPanel>

    <StackPanel Grid.Row="1" Grid.Column="1" DataContext="{Binding HubViewModel.Player, Source={StaticResource ViewModelLocator}}">
      <uc:BasicStats />
      <uc:TalizmanList />
    </StackPanel>

    <StackPanel Grid.Row="1" Grid.Column="3" DataContext="{Binding EnemyView.Enemy, Source={StaticResource ViewModelLocator}}">
      <uc:BasicStats />
      <uc:TalizmanList />
    </StackPanel>

    <StackPanel Grid.Row="1" Grid.Column="2">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="4*" />
          <ColumnDefinition Width="2*" />
          <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <uc:CalculatedStats DataContext="{Binding HubViewModel.Player, Source={StaticResource ViewModelLocator}}" />
        <Border Grid.Column="1" Style="{StaticResource Card}">
          <StackPanel DataContext="{Binding HubViewModel, Source={StaticResource ViewModelLocator}}" Orientation="Vertical">
            <Label Content="Start" Style="{StaticResource CardLabel}" />
            <!--<uc:LabelTextBox ImgSource="pack://application:,,,/img/iterations.png" Label="Iteracje" Text="{Binding Battle.Iterations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="8,6,8,0" Height="59" />-->
            <Button x:Name="StartCombat_Btn" Height="53" Margin="8,7,8,0" Command="{Binding StartBattleCommand}" Content="Start" Style="{StaticResource LargeButton}" />
          </StackPanel>
        </Border>
        <uc:CalculatedStats Grid.Column="2" DataContext="{Binding EnemyView.Enemy, Source={StaticResource ViewModelLocator}}" />
      </Grid>

      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!--<uc:BattleData DataContext="{Binding BattleView, Source={StaticResource ViewModelLocator}}" />-->
      </ScrollViewer>
    </StackPanel>
  </Grid>
</Window>